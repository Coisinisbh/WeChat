<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name = "NumberBtnStyle">
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">#D1EEEE</item>
        <item name="android:textColor">#8A2BE2</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name = "NumbersBtnStyle">
        <item name="android:layout_margin">@dimen/layout_margin</item>
        <item name="android:background">#FFDC35</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#8A2BE2</item>
    </style>

    <style name = "BtnStyle">
        <item name="android:text">textAllCaps</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#694E42</item>
        <item name="android:layout_width">@dimen/layout_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>

    </style>
    <style name = "Btn">
        <item name="android:button">@null</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/tab_menu_text</item>


    </style>

    <style name = "Xi">
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#8A2BE2</item>


    </style>

    <style name = "xiao">
        <item name="android:textSize">20sp</item>

        <item name="android:textColor">#8A2BE2</item>


    </style>


</resources>
